{
  "compilerOptions": {
    "types": ["vite/client"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,  
    "jsx": "preserve",
    "module": "esnext",
    "target": "esnext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",   
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}